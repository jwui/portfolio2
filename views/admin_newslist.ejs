<!--로그인 확인기능 구간-->
<% if(!userData) { %>
<script>
  alert("관리자만 접근할 수 있는 페이지입니다");
  location.href = "/admin";
</script>
<% } %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>관리자 뉴스등록 페이지</title>
    <style>
      .prdwrap .list {
        border: 1px solid #000;
        margin-bottom: 50px;
        width: 300px;
      }
      .prdwrap .list img {
        width: 150px;
      }
    </style>
  </head>
  <body>
    <!--상품목록 페이지 a / 매장등록 페이지 a-->
    <ul class="admin_menu">
      <li><a href="/admin/prdlist">상품등록페이지</a></li>
      <li><a href="/admin/storelist">매장등록페이지</a></li>
      <li><a href="/admin/newslist">뉴스등록페이지</a></li>
    </ul>
    <!--등록된 상품목록 전부다 보여주는 구간-->
    <div class="newswrap">
      <% for(let i = 0; i < newsData.length; i++) {%>
      <div class="list">
        <h3><%- newsData[i].number %></h3>
        <p><%- newsData[i].title %></p>
        <p><%- newsData[i].context %></p>
        <img src="/upload/<%- newsData[i].thumbnail %>" />
        <a href="/deletenews/<%- newsData[i].number %>">삭제</a>
        <a href="/newsupt/<%- newsData[i].number %>">수정</a>
      </div>
      <% } %>
    </div>
    <!--뉴스를 등록하는 form태그 구간-->
    <form action="/add/newslist" method="post" enctype="multipart/form-data">
      <input type="text" name="title" placeholder="제목" />
      <input type="text" name="context" placeholder="내용" />
      <input type="file" name="thumbnail" />
      <button type="submit">뉴스등록</button>
    </form>
  </body>
</html>
